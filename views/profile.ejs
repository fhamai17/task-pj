<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Profile</title>
  <%- include('partials/link') %>
</head>

<body class="d-flex flex-column bg-body-secondary">
  <!-- Main Content -->
  <%- include('partials/navbar') %>

    <!-- Main Content -->
    <div class="content">
      <h1 class="text-center">My Profile</h1>
      <div class="container bg-light shadow">
        <div class="row align-items-center">
          <div class="col-6">
            <img src="/images/register.png" alt="Login Picture" class="img-fluid" />
          </div>
          <div class="col-6">
            <div class="row justify-content-center">
              <div class="col-8">
                <!-- Form -->
                <div class="mb-3">
                  <label for="nameInput" class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" placeholder="Enter your name" disabled />
                </div>
                <div class="mb-3">
                  <label for="emailInput" class="form-label">Email</label>
                  <input type="text" class="form-control" id="email" placeholder="Enter your email" disabled />
                </div>
                <div class="mb-3">
                  <label for="usernameinput" class="form-label">Username</label>
                  <input type="text" class="form-control" id="username" placeholder="Enter your username" disabled />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>

      <!-- Bootstrap JS -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
      <script type="text/javascript">
        $(document).ready(function () {
          getProfile();
        });

        async function getProfile() {
          try {
            const res = await axios.get("/api/profile");
            const data = await res.data;
  
            if (data.success) {
              const profile = data.data;
              $('#name').val(profile.name);
              $('#email').val(profile.email);
              $('#username').val(profile.username);
            }

          } catch (error) {
            console.log(error);
          }

        };

      </script>
</body>

</html>